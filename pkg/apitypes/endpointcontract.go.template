	register("{{StripQueryFromUrl .Path}}", func(w http.ResponseWriter, r *http.Request) { {{if not .Unauthenticated}}
		if !middleware(w, r) {
			return // middleware aborted request handing and handled error response itself
		} {{end}}{{if .Consumes}}
